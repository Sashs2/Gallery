@model IEnumerable<Gallery.Models.Album>

<h2>Albums</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var album in Model)
        {
            <tr>
                <td>@album.Title</td>
                <td>@album.Description</td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <form asp-action="Delete" asp-route-id="@album.AlbumId" method="post" onsubmit="return confirm('Are you sure you want to delete this album?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>